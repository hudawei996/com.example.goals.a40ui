<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tool="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/V4_F5"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/moreImageView"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:src="@mipmap/ic_launcher"/>

        <ImageView
            android:id="@+id/moreImageView1"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignLeft="@+id/moreImageView"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@+id/moreImageView"
            android:src="@mipmap/ic_launcher"/>

        <ImageView
            android:id="@+id/moreImageView2"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignLeft="@+id/moreImageView1"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@+id/moreImageView1"
            android:src="@mipmap/ic_launcher"/>

        <ImageView
            android:id="@+id/moreImageView3"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignLeft="@+id/moreImageView2"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@+id/moreImageView2"
            android:src="@mipmap/ic_launcher"/>

        <ImageView
            android:id="@+id/moreImageView4"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignLeft="@+id/moreImageView3"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@+id/moreImageView3"
            android:src="@mipmap/ic_launcher"/>

        <ImageView
            android:id="@+id/moreImageView5"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignLeft="@+id/moreImageView4"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@+id/moreImageView4"
            android:src="@mipmap/ic_launcher"/>

        <ImageView
            android:id="@+id/moreImageView6"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_alignLeft="@+id/moreImageView5"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@+id/moreImageView5"
            android:background="@drawable/shape_white_round"
            android:src="@mipmap/more_topbar_noamal"/>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginBottom="@dimen/margin_10"
            android:layout_marginRight="@dimen/margin_10"
            android:layout_marginTop="@dimen/margin_10"
            android:orientation="horizontal">

            <view
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_marginRight="@dimen/margin_16"
                android:background="@color/V4_F2"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/nameTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="2"
                    android:gravity="center_vertical"
                    android:textColor="@color/V4_F1"
                    android:textSize="@dimen/font_20"
                    tool:text="人数"/>

                <TextView
                    android:id="@+id/descTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_marginRight="10dp"
                    android:layout_toLeftOf="@+id/moreImageView"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="@string/service_team"
                    android:textColor="@color/V4_F1"
                    android:textSize="@dimen/font_14"/>

            </LinearLayout>

            <ImageView
                android:id="@+id/imageArrow"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:src="@mipmap/like_normal"/>

        </LinearLayout>


    </RelativeLayout>

</LinearLayout>