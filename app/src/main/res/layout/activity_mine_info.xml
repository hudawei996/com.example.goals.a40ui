<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              xmlns:tool="http://schemas.android.com/tools"
              android:background="@color/V4_F6_4">

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/V4_F6_4"
        android:orientation="vertical">

        <include layout="@layout/common_line" />

        <!--第二行：称呼-->
        <RelativeLayout
            android:id="@+id/rlMineFullName"
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_32"
            android:background="@color/V4_F6_4"
            android:gravity="center_vertical">

            <TextView
                style="@style/MineModifyInfoItemName"
                android:text="@string/family_name" />

            <TextView
                android:id="@+id/tvFullName"
                style="@style/MineModifyInfoHint"
                android:layout_toLeftOf="@+id/arrowName"
                tool:text="aaa" />

            <ImageView
                android:id="@+id/arrowName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/activity_horizontal_margin"
                android:src="@mipmap/go" />

        </RelativeLayout>


    </android.support.v4.widget.NestedScrollView>

</LinearLayout>


